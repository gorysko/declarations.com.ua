{% load compress static %}
<!DOCTYPE html>
<html lang="uk">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{% block html_desc %}{% endblock %}">
        <meta name="author" content="">
        <title>{% block html_title %}Декларації{% endblock %}</title>

        {% compress css %}
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/bootstrap.css' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/decls.css' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/material.css' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/material-wfont.css' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/material-wfont.min.css' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/animate' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/ripples.css' %}" />
            <link rel="stylesheet" type="text/css" href="{% static 'catalog/css/style.css' %}" />
        {% endcompress %}

        <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700,100&subset=latin,cyrillic-ext,cyrillic' rel='stylesheet' type='text/css' />
        <link rel="shortcut icon" href="/static/catalog/favicon.ico" />
        <link rel="canonical" href="http://declarations.com.ua{{ request.path }}" />

        {% block extrahead %}{% endblock %}

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-61411581-1', 'auto');
          ga('send', 'pageview');

        </script>
    </head>

    <body class="{% block bodyclass %}{% endblock %}">
        <div id="wrapper">
            <div class="on-white">
                <div id="top">
                    <div class="container">
                        <div class="row">
                            <div class="col col-sm-5 col-xs-6 text-left">
                                <a href="{% url 'home' %}" class="logo pull-left"></a>
                            </div>

                            <div class="col col-sm-4 text-left hidden-xs">
                                <div class="stats">
                                    <p>Відкрито <span class="digits">{{ total_persons }}</span> чиновників</p>
                                    <p>Оброблено <span class="digits">{{ total_declarations }}</span> декларацій</p>
                                    <p>Долучились <span class="digits">3000</span> волонтерів</p>
                                </div>
                            </div>

                            <div class="col col-sm-3 col-xs-6 text-left">
                                <a href="http://sotnya.org.ua/" target="_blank" class="btn btn-info pull-right" id="joinus">Долучитись до розшифровки</a>
                            </div>
                        </div>
                    </div>
                </div>

                <nav id="navbar" class="navbar navbar-inverse navbar-default" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                                <span class="sr-only">Перемкнути :)</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse navbar-ex1-collapse pull-left">
                            <ul class="nav navbar-nav">
                                <li><a href="{% url 'home' %}">Головна</a></li>
                                <li><a href="{% url 'regions_home' %}">Регіони</a></li>
                                <li><a href="http://goo.gl/forms/OTbHz2FVbj">Розшукуємо декларації</a></li>
                                <li><a href="{% url 'about' %}">Про проект</a></li>
                                <li><a href="{% url 'api_doc' %}">Відкритий API</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                {% block infobox %}
                {% endblock %}
            </div>
            {% block content %}
            {% endblock %}

            <footer id="footer">
                <div class="container">
                    <div class="copirights-logos">
                        <div class="cl-block">
                            <a class ="clogos clogos_cs" href="https://www.facebook.com/kancelaristy?"  target="_blank">Канцелярська сотня</a><span class="ctext">Проект канцелярської сотні</span>
                        </div>
                        <div class="cl-block">
                            <a class ="clogos clogos_slab" href="http://schroedingerscatlab.com/" target="_blank">Лабораторія кота Шрьодінгера</a><span class="ctext">Дизайн Лабораторії кота Шрьодінгера</span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    {% compress js %}
        <script src="{% static 'catalog/js/bootstrap.js' %}"></script>
        <script src="{% static 'catalog/js/bootstrap3-typeahead.js' %}"></script>
        <script src="{% static 'catalog/js/jquery-1.11.2.js' %}"></script>
        <script src="{% static 'catalog/js/jquery.xdomainajax.js' %}"></script>
        <script src="{% static 'catalog/js/main.js' %}"></script>
        <script src="{% static 'catalog/js/material.js' %}"></script>
        <script src="{% static 'catalog/js/ripples.js' %}"></script>
    {% endcompress %}
    </body>
</html>
